record Point
    x: int8;
    y: int8;
end record;

var p: Point;
p.x := 1;
p.y := p.x;
if p.y != 1 then
    fail("p.y == 1");
end if;

var p1: Point := p;
if p1.y != 1 then
    fail("p1.y == 1");
end if;

var pa: Point[5];
var pp: [Point] := &pa[2];
pp.x := 1;
pp.y := pp.x;
if pa[2].y != 1 then
    fail("pa[2].y != 1");
end if;

pa[2].y := 7;
if pp.y != 7 then
    fail("pp.y != 7");
end if;
