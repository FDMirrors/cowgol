sub rshiftu()
	print("onetwoeight>>one == 64"); if onetwoeight>>one == 64 then yes(); else no(); end if;
	print("onetwoeight>>two == 32"); if onetwoeight>>two == 32 then yes(); else no(); end if;
end sub;
rshiftu();

sub rshifts()
