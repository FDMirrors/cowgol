# System call numbers are here:
# https://w3challs.com/syscalls/?arch=arm_thumb

var TOP: [uint8];
@asm ".extern _top";
@asm "ldr r0, =_top";
@asm "ldr r1, =", TOP;
@asm "str r0, [r1]";

var HIMEM: [uint8];
@asm ".extern _top";
@asm "ldr r0, =_himem";
@asm "ldr r1, =", HIMEM;
@asm "str r0, [r1]";

sub print_char(c: uint8)
	@asm "mov r0, #1"; # file descriptor
	@asm "ldr r1, =", c;
	@asm "mov r2, #1";
	@asm "mov r7, #4"; # write()
	@asm "svc #0";
end sub;

include "common.coh";

