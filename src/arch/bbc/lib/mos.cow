sub osbyte(a: uint8, x: uint8, y: uint8)
    @bytes 0xAD, &a;            # LDA a
    @bytes 0xAE, &x;            # LDX x
    @bytes 0xAC, &y;            # LDY y
    @bytes 0x4C, 0xF4, 0xFF;    # JMP OSBYTE
end sub;

sub osword(a: uint8, ptr: [int8])
    @bytes 0xAD, &a;            # LDA a
    @bytes 0xAE, &ptr+0;        # LDX ptr+0
    @bytes 0xAC, &ptr+1;        # LDY ptr+1
    @bytes 0x4C, 0xF1, 0xFF;    # JMP OSWORD
end sub;
