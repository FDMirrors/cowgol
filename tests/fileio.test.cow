include "cowgol.coh";
include "tests/_framework.coh";

const FCB_BUFFER_SIZE := 4;
typedef FCBIndexType is uint8;

record RawFCB is
end record;

include "fileio.coh";

@impl sub FCBRawRead is
	print("FCBRawRead(");
	print_i32(pos);
	print(", ");
	print_i8(len);
	print(")\n");

	var i: uint8 := 0;
	while i != FCB_BUFFER_SIZE loop
		fcb.buffer[i] := i;
		i := i + 1;
	end loop;
	amount := FCB_BUFFER_SIZE;
end sub;

@impl sub FCBRawWrite is
	print("FCBRawWrite(");
	print_i32(pos);
	print(", ");
	print_i8(len);
	print("):");

	var i: uint8 := 0;
	while i != len loop
		print_char(' ');
		print_i8(fcb.buffer[i]);
		i := i + 1;
	end loop;
	print_nl();
end sub;

var fcb: FCB;

sub InitFCB() is
	fcb.pos := 0;
	fcb.flags := 0;
	fcb.index := 0;
	fcb.buflen := 0;
end sub;

sub ShowFCB() is
	print("FCB: pos=");
	print_i32(fcb.pos);
	print(" index=");
	print_i8(fcb.index);
	print("/");
	print_i8(fcb.buflen);
	print(" flags=0x");
	print_hex_i8(fcb.flags);
	print_nl();
end sub;

sub GetChar() is
	var c := FCBGetChar(&fcb);
	print("GetChar() = ");
	print_i8(c);
	print_nl();
end sub;

sub PutChar(b: uint8) is
	print("PutChar(");
	print_i8(b);
	print(");");
	print_nl();
	FCBPutChar(&fcb, b);
end sub;

sub Tell() is
	print("Pos() = ");
	print_i32(FCBPos(&fcb));
	print_nl();
end sub;

sub Seek(pos: uint32) is
	print("Seek(");
	print_i32(pos);
	print(")\n");
	FCBSeek(&fcb, pos);
end sub;

sub Flush() is
	print("Flush()\n");
	FCBFlush(&fcb);
end sub;

sub Read2() is
	print("\nRead1\n");
	InitFCB();
	GetChar();
	GetChar();
	ShowFCB();
	Tell();
end sub;
Read2();
	
