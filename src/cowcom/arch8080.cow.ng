gen hl := ADD2(hl|bc|de:lhs, hl|bc|de:rhs)
{
	if ($lhs != REG_HL) and ($rhs != REG_HL) then
		if $rhs == REG_DE then
			E_xchg();
			$rhs := REG_HL;
		else
			if $lhs == REG_DE then
				E_xchg();
			else
				ArchEmitMove($lhs, REG_HL);
			end if;
			$lhs := REG_HL;
		end if;
	end if;

	if $lhs == REG_HL then
		E_dad($rhs);
	else
		E_dad($lhs);
	end if;
}

