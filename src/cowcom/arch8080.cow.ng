		E_mov(REG_A, lhs);
		E_alui(hiinsn, (value >> 8) as uint8);
		E_mov(dest, REG_A);
	end sub;

	sub dvrmu2()
		E_callhelper("_dvrmu2");
	end sub;

	sub dvrms2()
